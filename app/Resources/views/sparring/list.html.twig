{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <a href="{{ path('view_sparring_create') }}" class="btn btn-success center">Dodaj Sparring</a>
                <br><br>
                <table class="table table-striped text-center">
                    <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">Nazwa</th>
                        <th class="text-center">Dyscypliny</th>
                        <th class="text-center">Liczba Uczestnik√≥w</th>
                        <th class="text-center">Data</th>
                        <th class="text-center">Miasto</th>
                        <th class="text-center">Miejsce</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sparring in sparrings %}
                        <tr>
                            <td>{{ loop.revindex }}</td>
                            <td><a href="{{ path('view_sparring_show', {'id': sparring.id }) }}">{{ sparring.name }}</a></td>
                            <td>
                                {% for discipline in sparring.disciplines %}
                                    {{ discipline }}
                                    {% if not loop.last %},{% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ sparring.signups | length }}</td>
                            <td>{{ sparring.start|date('d-m-Y') }}</td>
                            <td>{{ sparring.place ? sparring.place.city }}</td>
                            <td>{{ sparring.place ? sparring.place.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
