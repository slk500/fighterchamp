                    });

                    $('.select2').select2({tags: true});
                    initAjaxForm();
                }
            });

            $(".setNullOnImage").click(function () {

                $.ajax({
                    type: 'POST',
                    url: "{{ path('api_setNullOnImage') }}",
                    success: function () {
                        location.reload();
                    }
                });
            });


        }
    </script>
{% endblock %}